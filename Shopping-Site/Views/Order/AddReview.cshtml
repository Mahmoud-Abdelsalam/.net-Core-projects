@model ShoppingSite.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "~/images/" + Model.Id + ".jpg";
}

<div class='container-fluid' style="margin-top: 150px;">
    <div class="card mx-auto col-md-3 col-5 mt-5">
        <img class='mx-auto img-thumbnail' src=@photoPath asp-append-version="true" style="border-radius: 70%" />
        <div class="card-body text-center mx-auto">
            <div class='cvp'>
                <h5 class="card-title font-weight-bold"> @Model.Product_Name</h5>
                <p class="card-text">&#36;@Model.Price</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row" style="margin-top:40px; margin-left: 350px;margin-bottom: 100px">
        <div class="col-md-6">
            <div class="well well-sm">
                <div class="text-right">
                    <a class="btn btn-success btn-green" href="#reviews-anchor" id="open-review-box">Leave a Review</a>
                </div>

                <div class="row" id="post-review-box" style="display:none;">
                    <div class="col-md-12">
                        <form accept-charset="UTF-8" method="post">
                            <input id="ratings-hidden" name="rating" type="hidden">
                            <textarea class="form-control animated" cols="50" id="new-review" name="comment" placeholder="Enter your review here..." rows="5"></textarea>

                            <div class="text-right">
                                <div class="stars starrr" data-rating="0"></div>
                                <a class="btn btn-danger btn-sm" href="#" id="close-review-box" style="display:none; margin-right: 10px;">
                                    <span class="glyphicon glyphicon-remove"></span>Cancel
                                </a>
                                <button asp-action="AddReview" asp-route-id="@Model.Id" class="btn btn-success btn-lg" type="submit">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>