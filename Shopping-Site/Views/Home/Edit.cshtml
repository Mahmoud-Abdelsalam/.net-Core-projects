@model ShoppingSite.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "/images/" + Model.Id + ".jpg";
}


<div class="row">
    <div class="col-md-10">
        <h1 class="mt-5">Edit This Product</h1>
        <div class='container-fluid'>
            <div class="card mx-auto col-md-3 col-5 mt-5">
                <img class='mx-auto img-thumbnail' src=@photoPath asp-append-version="true" style="border-radius: 70%" />
                <div class="card-body text-center mx-auto">
                    <div class='cvp'>
                        <h5 class="card-title font-weight-bold"> @Model.Product_Name</h5>
                        <p class="card-text">&#36;@Model.Price</p>
                    </div>
                </div>
            </div>
        </div>
        <form asp-action="Edit" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product_Name" class="control-label"></label>
                <input asp-for="Product_Name" class="form-control" />
                <span asp-validation-for="Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}