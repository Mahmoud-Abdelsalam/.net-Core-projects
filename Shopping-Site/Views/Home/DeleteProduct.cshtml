@model ShoppingSite.Models.Product

@{
    ViewData["Title"] = "DeleteProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "/images/" + Model.Id + ".jpg";
}

<h3 class=" text-danger text-lg" style="margin-top: 100px;">Are you sure you want to delete this Product?</h3>
<div class="container">
<form asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="mb-5 ml-5 pl-5">
    <input type="submit" value="Delete" class="btn btn-danger btn-lg" /> 
    <a asp-action="Index" class="btn btn-outline-dark btn-lg ml-3">Back to List</a>
</form>
    <div class='container-fluid'>
        <div class="card mx-auto col-md-3 col-5 mt-5">
            <img class='mx-auto img-thumbnail' src=@photoPath asp-append-version="true" style="border-radius: 70%" />
            <div class="card-body text-center mx-auto">
                <div class='cvp'>
                    <h5 class="card-title font-weight-bold"> @Model.Product_Name</h5>
                    <p class="card-text">&#36;@Model.Price</p>
                </div>
            </div>
        </div>
       
    </div>
</div>