<div class="container text-center " style="padding-bottom: 457px">
    @if (ViewBag.ErrorTitle == null)
    {
        <h3 class="text-danger">
            An error occured while processing your request.
            The supporting team is notified and working on the fix
        </h3>
        <h5 class="text-white lead">Please contact us on mahmoud.abdelsalam2016@gmail.com</h5>
    }
    else
    {
        <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
        <h3 class="text-danger lead">@ViewBag.ErrorMessage</h3>
    }
</div>