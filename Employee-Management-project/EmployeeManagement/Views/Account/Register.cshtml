@model RegisterViewModel

@{
    ViewData["Title"] = " User Registration";
}

<h1>Register </h1>

<h3> New User</h3>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-10">
            <form method="post" class="m-4" asp-action="Register" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bolder"></label>
                    <input asp-for="Email" class="form-control form-control-lg"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="font-weight-bolder"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="font-weight-bolder"></label>
                    <input asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="font-weight-bolder"></label>
                    <input asp-for="City" class="form-control"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-dark btn-lg">Register</button>
            </form>
        </div>
    </div>
</div>


