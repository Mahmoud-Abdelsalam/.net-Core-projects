@model List<EditUserRolesViewModel>

@{
    var userId = ViewBag.userId;
}
@{
    ViewData["Title"] = "EditUserRoles";
}

<h1>Manage User Roles</h1>

<hr />

<form method="post" class="m-lg-5" style="height: 25.25rem">
    <div class="card " style="margin: 0 auto; width: 30rem;">
        <div class="card-header">
            <h4> Add or remove roles from this user </h4>

        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1 ">
                    <input hidden asp-for="@Model[i].RoleName" />
                    <input hidden asp-for="@Model[i].RoleId" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input mt-2" />
                    <label class="form-check-label text-white lead" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-info btn-lg" />
            <a class="btn btn-dark  btn-lg" asp-controller="Administration" asp-action="EditUser" asp-route-id="@userId"> Cancel</a>
        </div>

    </div>
</form>

