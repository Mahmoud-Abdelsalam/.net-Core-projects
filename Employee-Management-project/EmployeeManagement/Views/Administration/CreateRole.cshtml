@model  CreateRoleModelView

@{
    ViewData["Title"] = "CreateRole";
}

<h1>Create New Role</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" method="post" style="padding-bottom: 310px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="font-weight-bolder"></label>
                <input asp-for="RoleName" class="form-control form-control-lg" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Role" class="btn btn-info btn-lg " />
                <a asp-controller="Administration" asp-action="RolesList" class="btn btn-outline-secondary  btn-lg">Roles List</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
