@model List<EditRoleUserViewModel>

@{
    var roleId = ViewBag.roleId;
}

@{
    ViewData["Title"] = "EditRoleUser";
}

<h1>Manage Role Users</h1>

<hr />

<form method="post" class="m-lg-5" style="height: 25.25rem">
    <div class="card " style="margin: 0 auto; width: 30rem;">
        <div class="card-header">
            <h4> Add or remove users from this role </h4>

        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1 ">
                    <input hidden asp-for="@Model[i].UserName" />
                    <input hidden asp-for="@Model[i].UserId" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input mt-2" />
                    <label class="form-check-label text-white lead" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-info btn-lg" />
            <a class="btn btn-dark  btn-lg" asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId"> Cancel</a>
        </div>

    </div>
</form>
